<Window x:Class="WinOptApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinOptApp"
        mc:Ignorable="d"
        Title="Ashera's Tweaking Utility"
        Icon="pack://application:,,,/Assets/github-profile.ico"
        Height="760"
        Width="1280"
        MinHeight="700"
        MinWidth="980"
        Background="#050A12"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType">
    <Window.Resources>
        <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#0D1728"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="#EAF4FF"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#0D1728"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="#EAF4FF"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#234772"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="PanelBg" Color="#0E182A"/>
        <SolidColorBrush x:Key="PanelBorder" Color="#223A5E"/>
        <SolidColorBrush x:Key="Accent" Color="#5AA2FF"/>
        <local:PercentageToArcConverter x:Key="PercentageToArcConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style x:Key="TweakCardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#0A1322"/>
            <Setter Property="BorderBrush" Value="#29476F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,12,12"/>
        </Style>
        <Style x:Key="WarningBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="#123157"/>
            <Setter Property="BorderBrush" Value="#2A4E7F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="88"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#17345C"/>
            <Setter Property="BorderBrush" Value="#2A4E7F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Track"
                                    CornerRadius="16"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"/>
                            <Border x:Name="Thumb"
                                    Width="40"
                                    Height="26"
                                    CornerRadius="13"
                                    Background="#A6BCD6"
                                    HorizontalAlignment="Left"
                                    Margin="3,3,0,3"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="#2A64B5"/>
                                <Setter TargetName="Track" Property="BorderBrush" Value="#4B90F0"/>
                                <Setter TargetName="Thumb" Property="Background" Value="#DCEBFF"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="0,3,3,3"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Track" Property="BorderBrush" Value="#5B84B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0D1728"/>
            <Setter Property="Foreground" Value="#EAF4FF"/>
            <Setter Property="BorderBrush" Value="#223A5E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,0,0,7"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="38"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="9"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#132742"/>
                    <Setter Property="BorderBrush" Value="#3C6AA2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#F3F9FF"/>
            <Setter Property="Background" Value="#12263F"/>
            <Setter Property="BorderBrush" Value="#315782"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Margin" Value="0,0,10,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A3560"/>
                    <Setter Property="BorderBrush" Value="#5AA2FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#0D1728"/>
            <Setter Property="Foreground" Value="#EAF4FF"/>
            <Setter Property="TextElement.Foreground" Value="#EAF4FF"/>
            <Setter Property="TextBox.Foreground" Value="#EAF4FF"/>
            <Setter Property="TextBox.Background" Value="#0D1728"/>
            <Setter Property="BorderBrush" Value="#315782"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="IsEditable" Value="True"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Foreground" Value="#EAF4FF"/>
                        <Setter Property="Background" Value="#0D1728"/>
                        <Setter Property="Padding" Value="8,5"/>
                        <Style.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#1B3558"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#234772"/>
                                <Setter Property="Foreground" Value="#F7FBFF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBox" BasedOn="{StaticResource DarkComboBoxStyle}"/>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="#EAF4FF"/>
            <Setter Property="Background" Value="#0D1728"/>
            <Setter Property="Padding" Value="8,5"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#1B3558"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#234772"/>
                    <Setter Property="Foreground" Value="#F7FBFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#050A12" Offset="0"/>
                <GradientStop Color="#0A1424" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#091324" BorderBrush="#223A5E" BorderThickness="0,0,1,0">
            <Grid Margin="14">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="34" Height="34" CornerRadius="17" BorderBrush="#2A4E7F" BorderThickness="1" Margin="0,0,8,0">
                            <Border.Background>
                                <ImageBrush ImageSource="pack://application:,,,/Assets/github-profile.png" Stretch="UniformToFill"/>
                            </Border.Background>
                        </Border>
                        <TextBlock Foreground="#F7FBFF" FontSize="24" FontWeight="Bold" Text="Ashera's Tweaking Utility" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Foreground="#A6BCD6" Margin="0,2,0,12" Text="Tweak and recover"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" Margin="0,10,0,12" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <TextBlock Foreground="#7EA0C8" FontSize="12" Margin="2,0,0,8" Text="GENERAL"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="Home" Click="HomeButton_Click"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="System Restore" Click="SystemRestoreButton_Click"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="Resources" Click="ResourcesButton_Click"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="Fixes" Click="FixesButton_Click"/>

                        <TextBlock Foreground="#7EA0C8" FontSize="12" Margin="2,16,0,8" Text="TWEAKS"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="General Tweaks" Click="GeneralTweaksButton_Click"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="Game Profiles" Click="GameProfilesButton_Click"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="Startup Optimizer" Click="StartupOptimizerButton_Click"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="App Optimizer" Click="AppOptimizerButton_Click"/>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="3" Margin="0,10,0,0">
                    <Border CornerRadius="10" BorderBrush="#2A4E7F" BorderThickness="1" Background="#0E1A2D" Padding="10">
                        <StackPanel>
                            <TextBlock Foreground="#F2F7FF" FontWeight="SemiBold" Text="Safe Mode"/>
                            <TextBlock Foreground="#A6BCD6" Margin="0,4,0,0" Text="All changes are rollback-ready."/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="10" BorderBrush="#2A4E7F" BorderThickness="1" Background="#0E1A2D" Padding="10" Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="34" Height="34" CornerRadius="17" BorderBrush="#315782" BorderThickness="1" Margin="0,0,8,0">
                                <Border.Background>
                                    <ImageBrush ImageSource="pack://application:,,,/Assets/github-profile.png" Stretch="UniformToFill"/>
                                </Border.Background>
                            </Border>
                            <StackPanel>
                                <TextBlock Foreground="#F2F7FF" FontWeight="SemiBold" Text="AsheraDev"/>
                                <TextBlock Foreground="#A6BCD6" FontSize="11" Text="GitHub Profile"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel>
                <TextBlock Foreground="#F7FBFF" FontSize="34" FontWeight="Bold" Text="Ashera's Tweaking Utility"/>
                <TextBlock Foreground="#A6BCD6" FontSize="16" Margin="0,4,0,0" Text="Performance, Stability, and Recovery in one place"/>
                <TextBlock Foreground="#A6BCD6"
                           FontSize="12"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap"
                           Text="{Binding SystemSpecsText, Mode=OneWay}"/>
            </StackPanel>

            <WrapPanel Grid.Row="1" Margin="0,14,0,6">
                <Button Style="{StaticResource ActionButtonStyle}" Click="AnalyzeButton_Click" Content="Analyze"/>
                <Button Style="{StaticResource ActionButtonStyle}" Click="ApplyProfileButton_Click" Content="Apply Gaming Profile"/>
                <Button Style="{StaticResource ActionButtonStyle}" Click="RollbackButton_Click" Content="Revert to Default"/>
                <Button Style="{StaticResource ActionButtonStyle}" Click="CheckUpdatesButton_Click" Content="Check Updates"/>
                <Button Style="{StaticResource ActionButtonStyle}" Click="DownloadUpdateButton_Click" Content="Download Update"/>
                <Border Background="#0E1A2D" BorderBrush="#2A4E7F" BorderThickness="1" CornerRadius="8" Padding="14,8" VerticalAlignment="Center" Margin="0,0,0,8">
                    <TextBlock Foreground="#F7FBFF" Text="{Binding StatusText}"/>
                </Border>
            </WrapPanel>

            <ScrollViewer Grid.Row="2"
                          Margin="0,0,0,14"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Visibility="{Binding IsDashboardVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                <Border Grid.Row="0" Grid.Column="0" CornerRadius="14" BorderBrush="#2A4E7F" BorderThickness="1" Padding="14" Margin="0,0,10,10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#08111F" Offset="0"/>
                            <GradientStop Color="#10223D" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Width="140" Height="140" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Ellipse Stroke="#2A2D37" StrokeThickness="14"/>
                            <Path Stroke="{StaticResource Accent}" StrokeThickness="14" StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                                  Data="{Binding CpuUsage, Mode=OneWay, Converter={StaticResource PercentageToArcConverter}}"/>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Foreground="#DCEBFF" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Text="{Binding CpuUsageText}"/>
                                <TextBlock Foreground="#8E94A8" FontSize="11" HorizontalAlignment="Center" Text="CPU Used"/>
                            </StackPanel>
                        </Grid>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Foreground="#F7FBFF" FontSize="16" FontWeight="SemiBold" Text="CPU"/>
                            <TextBlock Foreground="#A6BCD6" Margin="0,4,0,0" Text="Processor usage (live)"/>
                            <TextBlock Foreground="#DCEBFF" Margin="0,12,0,0" Text="{Binding CpuSpeedText}"/>
                            <TextBlock Foreground="#A6BCD6" Margin="0,4,0,0" Text="{Binding CpuSpeedMhz, StringFormat=Current: {0:0} MHz}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" CornerRadius="14" BorderBrush="#2A4E7F" BorderThickness="1" Padding="14" Margin="0,0,0,10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#08111F" Offset="0"/>
                            <GradientStop Color="#10223D" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <TextBlock Foreground="#F7FBFF" FontSize="16" FontWeight="SemiBold" Text="Memory"/>
                        <TextBlock Foreground="#DCEBFF" FontSize="38" FontWeight="Bold" Margin="0,6,0,0" Text="{Binding MemoryUsageText}"/>
                        <TextBlock Foreground="#A6BCD6" Margin="0,2,0,0" Text="{Binding MemoryDetailsText}"/>
                        <ProgressBar Height="8" Margin="0,12,0,0" Value="{Binding MemoryUsage, Mode=OneWay}" Maximum="100" Foreground="#4B90F0" Background="#2A2D37"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1" Grid.Column="0" CornerRadius="14" BorderBrush="#2A4E7F" BorderThickness="1" Padding="14" Margin="0,0,10,10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#08111F" Offset="0"/>
                            <GradientStop Color="#10223D" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Width="140" Height="140" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Ellipse Stroke="#2A2D37" StrokeThickness="14"/>
                            <Path Stroke="#79B8FF" StrokeThickness="14" StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                                  Data="{Binding DiskUsage, Mode=OneWay, Converter={StaticResource PercentageToArcConverter}}"/>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Foreground="#DCEBFF" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Text="{Binding DiskUsageText}"/>
                                <TextBlock Foreground="#8E94A8" FontSize="11" HorizontalAlignment="Center" Text="Used"/>
                            </StackPanel>
                        </Grid>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Foreground="#F7FBFF" FontSize="16" FontWeight="SemiBold" Text="Disk"/>
                            <TextBlock Foreground="#A6BCD6" Margin="0,4,0,0" Text="{Binding DiskDetailsText}"/>
                            <TextBlock Foreground="#DCEBFF" Margin="0,12,0,0" Text="{Binding DiskUsedText}"/>
                            <TextBlock Foreground="#8FD2FF" Margin="0,4,0,0" Text="{Binding DiskFreeText}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Grid.Column="1" CornerRadius="14" BorderBrush="#2A4E7F" BorderThickness="1" Padding="14" Margin="0,0,0,10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#08111F" Offset="0"/>
                            <GradientStop Color="#10223D" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Width="140" Height="140" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Ellipse Stroke="#2A2D37" StrokeThickness="14"/>
                            <Path Stroke="#5EA2FF" StrokeThickness="14" StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                                  Data="{Binding GpuUsage, Mode=OneWay, Converter={StaticResource PercentageToArcConverter}}"/>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Foreground="#DCEBFF" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Text="{Binding GpuUsageText}"/>
                                <TextBlock Foreground="#8E94A8" FontSize="11" HorizontalAlignment="Center" Text="GPU Used"/>
                            </StackPanel>
                        </Grid>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Foreground="#F7FBFF" FontSize="16" FontWeight="SemiBold" Text="GPU"/>
                            <TextBlock Foreground="#A6BCD6" Margin="0,4,0,0" Text="{Binding GpuDetailsText}"/>
                            <TextBlock Foreground="#DCEBFF" Margin="0,12,0,0" Text="{Binding GpuVramText}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="2" Grid.Column="0" CornerRadius="14" BorderBrush="#2A4E7F" BorderThickness="1" Padding="14" Margin="0,0,10,0" MinHeight="220">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#08111F" Offset="0"/>
                            <GradientStop Color="#10223D" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <TextBlock Foreground="#F7FBFF" FontSize="16" FontWeight="SemiBold" Text="Ethernet"/>
                        <TextBlock Foreground="#DCEBFF" FontSize="24" FontWeight="Bold" Margin="0,8,0,0" Text="{Binding NetworkUploadText}"/>
                        <TextBlock Foreground="#8FD2FF" FontSize="24" FontWeight="Bold" Margin="0,4,0,0" Text="{Binding NetworkDownloadText}"/>
                        <TextBlock Foreground="#A6BCD6" Margin="0,10,0,0" Text="{Binding NetworkAdapterText}"/>
                        <TextBlock Foreground="#A6BCD6" Margin="0,4,0,0" Text="{Binding NetworkTotalsText}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="2" Grid.Column="1" CornerRadius="14" BorderBrush="#2A4E7F" BorderThickness="1" Padding="14" MinHeight="220">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#08111F" Offset="0"/>
                            <GradientStop Color="#10223D" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Foreground="#F7FBFF" FontSize="16" FontWeight="SemiBold" Text="Temperature Monitor"/>
                        <TextBlock Grid.Row="1" Foreground="#DCEBFF" FontSize="34" FontWeight="Bold" Margin="0,6,0,0" Text="{Binding TemperatureValueText}"/>
                        <TextBlock Grid.Row="2" Foreground="#A6BCD6" Margin="0,2,0,0" Text="{Binding TemperatureDetailText}"/>
                        <TextBlock Grid.Row="3" Foreground="#8FD2FF" Margin="0,2,0,0" Text="{Binding TemperatureTrendText}"/>
                        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,8,0,0">
                            <Button x:Name="TempCpuButton" Style="{StaticResource ActionButtonStyle}" Width="80" Margin="0,0,8,0" Padding="10,6" Content="CPU" Click="TempCpuButton_Click"/>
                            <Button x:Name="TempGpuButton" Style="{StaticResource ActionButtonStyle}" Width="80" Margin="0,0,0,0" Padding="10,6" Content="GPU" Click="TempGpuButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" CornerRadius="14" BorderBrush="#2A4E7F" BorderThickness="1" Padding="14" Margin="0,10,0,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#08111F" Offset="0"/>
                            <GradientStop Color="#10223D" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Foreground="#F7FBFF" FontSize="16" FontWeight="SemiBold" Text="Controller Polling Manager"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Foreground="#A6BCD6" Margin="0,10,8,0" Text="{Binding ControllerPollingStatusText}" TextWrapping="Wrap"/>

                        <ComboBox Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" x:Name="ControllerDeviceComboBox"
                                  Style="{StaticResource DarkComboBoxStyle}"
                                  Margin="8,0,8,0"
                                  Foreground="#EAF4FF"
                                  Background="#0D1728"
                                  VerticalContentAlignment="Center"
                                  DisplayMemberPath="DisplayName"
                                  SelectedValuePath="InstanceId"
                                  SelectionChanged="ControllerDeviceComboBox_SelectionChanged"/>
                        <ComboBox Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" x:Name="PollingRateComboBox" Style="{StaticResource DarkComboBoxStyle}" Margin="8,0,8,0" VerticalContentAlignment="Center" Foreground="#EAF4FF" Background="#0D1728"/>
                        <Button Grid.Row="0" Grid.Column="3" Grid.RowSpan="2" Margin="8,0,8,0" Style="{StaticResource ActionButtonStyle}" Content="Apply Rate" Click="ApplyControllerPollingButton_Click"/>
                        <Button Grid.Row="0" Grid.Column="4" Grid.RowSpan="2" Margin="8,0,0,0" Style="{StaticResource ActionButtonStyle}" Content="Refresh" Click="RefreshControllerDevicesButton_Click"/>
                    </Grid>
                </Border>
                </Grid>
            </ScrollViewer>

            <Border Grid.Row="2"
                    Background="{StaticResource PanelBg}"
                    BorderBrush="{StaticResource PanelBorder}"
                    BorderThickness="1"
                    CornerRadius="14"
                    Padding="14"
                    Margin="0,0,0,14"
                    Visibility="{Binding IsGeneralTweaksVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Foreground="#F7FBFF" FontSize="22" FontWeight="SemiBold" Text="General Tweaks"/>

                    <ScrollViewer Grid.Row="1" Margin="0,12,0,0" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding TweakCards}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource TweakCardBorderStyle}" Width="300" Height="200">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Border Width="36" Height="36" CornerRadius="8" Background="#10223D" BorderBrush="#2A4E7F" BorderThickness="1">
                                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#A6BCD6" FontWeight="Bold" Text=""/>
                                            </Border>
                                            <TextBlock Grid.Row="0" Margin="48,4,0,0" Foreground="#F7FBFF" FontSize="20" FontWeight="SemiBold" Text="{Binding Title}"/>
                                            <Border Grid.Row="1" Margin="0,10,0,0" Height="1" Background="#1D3557"/>
                                            <TextBlock Grid.Row="2"
                                                       Margin="0,12,0,0"
                                                       Foreground="#A6BCD6"
                                                       FontSize="12"
                                                       TextWrapping="Wrap"
                                                       Text="{Binding Description}"/>
                                            <TextBlock Grid.Row="2"
                                                       Margin="0,78,0,0"
                                                       Foreground="#8FD2FF"
                                                       FontSize="11"
                                                       Text="{Binding LiveStateText}"/>
                                            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Border Style="{StaticResource WarningBadgeStyle}"
                                                        Visibility="{Binding HasWarning, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Foreground="#DCEBFF" FontWeight="SemiBold" Text="{Binding WarningText}"/>
                                                </Border>
                                                <ToggleButton Style="{StaticResource ToggleSwitchStyle}"
                                                              Margin="12,8,0,0"
                                                              IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                              Tag="{Binding}"
                                                              Checked="TweakToggle_Changed"
                                                              Unchecked="TweakToggle_Changed"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Border Grid.Row="2"
                    Background="{StaticResource PanelBg}"
                    BorderBrush="{StaticResource PanelBorder}"
                    BorderThickness="1"
                    CornerRadius="14"
                    Padding="14"
                    Margin="0,0,0,14"
                    Visibility="{Binding IsGameProfilesVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Foreground="#F7FBFF" FontSize="22" FontWeight="SemiBold" Text="Game Profiles"/>
                    <TextBlock Grid.Row="1" Foreground="#A6BCD6" Margin="0,8,0,12" Text="Per-game tuning and region preferences."/>

                    <Border Grid.Row="2" Style="{StaticResource TweakCardBorderStyle}" Margin="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="170"/>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="110"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Foreground="#F7FBFF" FontSize="20" FontWeight="SemiBold" Text="Fortnite"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6" Foreground="#A6BCD6" Margin="0,8,0,10" Text="Choose a Fortnite server node (Ashburn, Frankfurt, etc.) and test ping for each endpoint." TextWrapping="Wrap"/>
                            <ComboBox Grid.Row="2" Grid.Column="1" x:Name="FortniteRegionComboBox"
                                      Style="{StaticResource DarkComboBoxStyle}"
                                      Margin="8,0,8,0"
                                      VerticalContentAlignment="Center"
                                      DisplayMemberPath="DisplayName"
                                      SelectedValuePath="Hostname"/>
                            <Button Grid.Row="2" Grid.Column="2" Margin="8,0,8,0" Style="{StaticResource ActionButtonStyle}" Content="Apply" Click="ApplyFortniteRegionButton_Click"/>
                            <Button Grid.Row="2" Grid.Column="3" Margin="8,0,8,0" Style="{StaticResource ActionButtonStyle}" Content="Suggest Closest" Click="SuggestFortniteRegionButton_Click"/>
                            <Button Grid.Row="2" Grid.Column="4" Margin="8,0,0,0" Style="{StaticResource ActionButtonStyle}" Content="Reload" Click="ReloadFortniteRegionButton_Click"/>
                            <Button Grid.Row="2" Grid.Column="5" Margin="8,0,0,0" Style="{StaticResource ActionButtonStyle}" Content="Ping All" Click="PingFortniteServersButton_Click"/>
                            <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="6" Foreground="#8FD2FF" Margin="0,12,0,0" Text="{Binding FortniteRegionStatusText}" TextWrapping="Wrap"/>
                            <DataGrid Grid.Row="4"
                                      Grid.Column="0"
                                      Grid.ColumnSpan="6"
                                      Margin="0,10,0,0"
                                      AutoGenerateColumns="False"
                                      HeadersVisibility="Column"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      CanUserResizeRows="False"
                                      IsReadOnly="True"
                                      ItemsSource="{Binding FortniteServerPings}"
                                      RowHeaderWidth="0"
                                      GridLinesVisibility="Horizontal"
                                      Background="#0A1322"
                                      Foreground="#EAF4FF"
                                      AlternatingRowBackground="#0E1D33"
                                      BorderBrush="#29476F"
                                      BorderThickness="1">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background" Value="#0A1322"/>
                                        <Setter Property="Foreground" Value="#EAF4FF"/>
                                        <Setter Property="BorderBrush" Value="#223A5E"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#162944"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#234772"/>
                                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="#EAF4FF"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="8,4"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#234772"/>
                                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#132742"/>
                                        <Setter Property="Foreground" Value="#F7FBFF"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="BorderBrush" Value="#315782"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="Padding" Value="8,6"/>
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Region" Binding="{Binding Region}" Width="*"/>
                                    <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="80"/>
                                    <DataGridTextColumn Header="Endpoint" Binding="{Binding Hostname}" Width="2*"/>
                                    <DataGridTextColumn Header="Ping (ms)" Binding="{Binding PingText}" Width="110"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
                </ScrollViewer>
            </Border>

            <Border Grid.Row="2"
                    Background="{StaticResource PanelBg}"
                    BorderBrush="{StaticResource PanelBorder}"
                    BorderThickness="1"
                    CornerRadius="14"
                    Padding="14"
                    Margin="0,0,0,14"
                    Visibility="{Binding IsAppOptimizerVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Foreground="#F7FBFF" FontSize="22" FontWeight="SemiBold" Text="App Optimizer"/>
                    <WrapPanel Grid.Row="1" Margin="0,10,0,8">
                        <Button Style="{StaticResource ActionButtonStyle}" Content="Refresh List" Click="RefreshAppOptimizerButton_Click"/>
                        <Button Style="{StaticResource ActionButtonStyle}" Content="Guide Selected" Click="GuideSelectedAppsButton_Click"/>
                        <Button Style="{StaticResource ActionButtonStyle}" Content="Open Apps &amp; Features" Click="OpenAppsFeaturesButton_Click"/>
                        <Button Style="{StaticResource ActionButtonStyle}" Content="Open Startup Apps" Click="OpenStartupAppsButton_Click"/>
                    </WrapPanel>

                    <DataGrid Grid.Row="2"
                              x:Name="AppOptimizerDataGrid"
                              Margin="0,4,0,0"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              IsReadOnly="False"
                              ItemsSource="{Binding AppOptimizationItems}"
                              RowHeaderWidth="0"
                              GridLinesVisibility="Horizontal"
                              Background="#0A1322"
                              Foreground="#EAF4FF"
                              AlternatingRowBackground="#0E1D33"
                              BorderBrush="#29476F"
                              BorderThickness="1">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="Pick" Binding="{Binding IsSelected, Mode=TwoWay}" Width="56"/>
                            <DataGridTemplateColumn Header="Icon" Width="58">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Width="28" Height="28" CornerRadius="14" Background="#163153" BorderBrush="#315782" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding IconText}" Foreground="#DCEBFF" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="App" Binding="{Binding Name}" Width="2*"/>
                            <DataGridTextColumn Header="Recommended Action" Binding="{Binding ActionLabel}" Width="2*"/>
                            <DataGridTextColumn Header="State" Binding="{Binding StateText}" Width="*"/>
                            <DataGridTextColumn Header="Why" Binding="{Binding Notes}" Width="2.2*"/>
                            <DataGridTemplateColumn Header="Target" Width="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Open"
                                                Padding="8,4"
                                                Margin="4,2"
                                                Style="{StaticResource ActionButtonStyle}"
                                                Tag="{Binding}"
                                                Click="OpenAppTargetButton_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <Border Grid.Row="3"
                    Background="{StaticResource PanelBg}"
                    BorderBrush="{StaticResource PanelBorder}"
                    BorderThickness="1"
                    CornerRadius="14"
                    Padding="14"
                    MinHeight="190"
                    MaxHeight="280">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Foreground="#F7FBFF" FontSize="20" FontWeight="SemiBold" Text="View Changes Log"/>

                    <TextBox Grid.Row="1"
                             Name="OutputTextBox"
                             Margin="0,10,0,0"
                             FontFamily="Consolas"
                             FontSize="13"
                             Foreground="#E9F3FF"
                             Background="#08111F"
                             BorderBrush="#1D3557"
                             BorderThickness="1"
                             Padding="10"
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             TextWrapping="NoWrap" />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>

